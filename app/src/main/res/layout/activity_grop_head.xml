<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinLayActGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="85dp"
            android:text="@string/User"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/buttonGroupHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/GroupHead"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinLayTestMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinLayActGroup1"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/Material"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/spinnerTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/Test"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinLayAnswered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinLayTestMaterial"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_testAnswered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answered"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spinner_Answered"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:entries="@array/Answered"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:text="Kategorijas"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_category2"
            android:layout_width="53dp"
            android:layout_height="44dp"
            android:scrollbarSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinLaySearchQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ViewSwitcher
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/my_switcher"
            android:layout_width="290dp"
            android:layout_height="46dp" >

            <Button
                android:id="@+id/buttonMakeQuestion"
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:onClick="ButtonClicked"
                android:text="Izveido savu jautājumu"
                android:visibility="visible" />

            <EditText android:id="@+id/editTextSearchedQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Meklētais jautājums"
                />

        </ViewSwitcher>

        <ImageButton
            android:id="@+id/imageSearch"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            app:srcCompat="@drawable/search"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageWrite"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            app:srcCompat="@drawable/add_circle"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinLayListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listViewOneObject"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="5dp"
            android:footerDividersEnabled="false" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonMakeTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="Izveidot Testu" />

</LinearLayout>